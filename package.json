{
  "name": "ms-teams-capsule",
  "productName": "Microsoft Teams Capsule",
  "description": "Microsoft Teams Capsule allows to run MS Teams web version as a standalone app",
  "version": "0.2.0",
  "author": "Vadzim Miashaikin <karmainside@gmail.com>",
  "copyright": "Â© 2017, Vadzim Miashaikin",
  "homepage": "http://example.com",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "com.karmainsie.ms-teams-capsule",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register",
    "prettier": "prettier --write --print-width 80 --single-quote --trailing-comma es5 \"{app,build,config,e2e,scripts,src,tasks}/**/*.js\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "git add"
    ]
  },
  "dependencies": {
    "about-window": "^1.6.1",
    "fs-jetpack": "^0.10.2",
    "node-notifier": "^5.0.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "electron": "^1.6.0",
    "electron-builder": "^8.6.0",
    "electron-mocha": "^3.0.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "husky": "^0.13.2",
    "istanbul": "^0.4.3",
    "lint-staged": "^3.3.1",
    "minimist": "^1.2.0",
    "mocha": "^3.0.2",
    "prettier": "^0.21.0",
    "rollup": "^0.36.3",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.2",
    "spectron": "^3.3.0"
  }
}
